pipeline{
    
    agent any
    
    tools{
        jdk 'java-17'
        maven 'maven'
    }

    environment{
        IMAGE_NAME= "ashwinibasavaraj/blogpostapp:${GIT_COMMIT}"
    }

    stages{
        stage('Git-checkout'){
            steps{
                git url: 'https://github.com/ashwinidevops03/blog_CIpipeline.git', branch: 'master'
            }
        }

        stage('Compile'){
            steps{
                sh '''
                 mvn compile

                '''
            }
        }

        stage('Packaging'){
            steps{
                sh '''
                 mvn clean package

                 '''
            }
        }

        stage('Docker-Build'){
            steps{
                sh '''
                    docker build -t ${IMAGE_NAME} .

                '''
            }
        }

        stage('Docker-Run'){
            steps{
                sh '''
                    docker rm -f blogappcontainer || true
                    
                    docker run -d -p 9090:8080 --name blogappcontainer ${IMAGE_NAME}
                '''
            }
        }

        stage('login to dockerhub'){
             steps {

                 withCredentials([usernamePassword(credentialsId: 'dockerhub-cred',
                                                   usernameVariable: 'DOCKER_USER',
                                                   passwordVariable: 'DOCKER_PASS')]) 
          
               sh """
                  echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

                 """
            }
        }

        stage('pushing to dockerhub'){
            steps{
                sh'''
                docker push ${IMAGE_NAME}

                '''

            }
        }
             
        
    }
}